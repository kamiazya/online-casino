{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "exclude": [
    "/**/__tests__/**/*",
    "/**/__specs__/**/*",
    "/**/*.test.ts",
    "/**/*.test.tsx",
    "/**/*.spec.ts",
    "/**/*.spec.tsx",
    "/**/*.spec.ts",
    "**/lib/**/*"
  ]
}
