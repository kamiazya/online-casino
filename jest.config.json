{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/src/**"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "__tests__/utils/"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testMatch": [
    "**/__tests__/**/*.spec.[jt]s?(x)",
    "**/__tests__/**/*.test.[jt]s?(x)"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ]
}
